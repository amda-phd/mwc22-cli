  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Test",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["jest"],
      "console": "integratedTerminal",
      "env": {
        "DEBUG": "true"
      }
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Program",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["./bin/index.js"],
      "console": "integratedTerminal"
    }
  ]
}
